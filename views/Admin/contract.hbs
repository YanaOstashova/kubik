      <div class="main">
        <div class="main-head">
          <h3>Договоры</h3>
        </div>

        
        <br>
        <table align="center">
          <tbody>
            <tr class="name">
             
              <td>Договор</td>
              <td>Дата подписания</td>
              <td>Сумма</td>
              <td>Ученик</td>
              <td  style="width:200px" >Действие</td>
            </tr>

            <tr>
              <form action="AddContract" method="post">

            
              
              <td><input name="Doc" type="text" required></td>
              <td><input  name = "DocDate" style="width: 85%;" type="date" required></td>
              <td><input name="DocSum" type="number" required></td>
              <td> <select name="DocSt" required> 
                                    
                                    {{#each menust}}<option value="{{IDStudent}}">{{NamePerson}}</option>{{/each}}
                                  
                                </select>
                            </td>
             
              <td><button class="but-chan1" onclick="alert('Данные были добавлены')">
                  <div style="margin: 5px;"><img class="img-change"
                      src="images\ok.png"><span>Сохранить</span></div>
                    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                </button>  </form>
              </td>

            </tr>
            {{#each menucon}}
              <tr>
                <form action="UpContract" method="post">
             <input name = "Contract" hidden type="number" value="{{IDContract}}"> 
              <td><input  name = "Doc" type="button" value="Договор" onClick="window.open('{{DocContract}}')"></td>
              <td><input name="DocDate" type="text" value="{{DateContract}}"></td>
              <td><input name = "DocSum" type="text" value="{{TheAmount}}"></td>
              <td>  <input name = "DocSt" hidden type="number" value="{{IDStudent}}"> <input  type="text" value="{{NamePerson}}"></td></td>
              <td><button class="but-chan1" onclick="alert('Данные были изменены')">
                  <div style="margin: 5px;"><img class="img-change"
                      src="images\ok.png"><span>Сохранить</span></div>
                      <input type="hidden" name="_csrf" value="{{ csrfToken }}">

                </button>
                </form>

                <div style="margin: 4%;"></div>
                <form action="DelContract" method="post">
                <button class="but-chan2" onclick="alert('Данные были удалены')">
                   <input name="Contract" hidden type="number" value="{{IDContract}}"> 
                  <div style="margin: 5px"><img class="img-change"
                      src="images\del.png"><span>Удалить</span></div>
                </button></form>
              </td>

            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

