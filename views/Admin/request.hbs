            </div>
            <div class="head-8">
                
            </div>
            <div class="head-9"></div>
        </div>

            <div class="main">
                <div class="main-head">
                    <h3>Заявки</h3>
                </div>
               
                <table align="center">
                    <tbody>
                        <tr class="name">
                            <td>Имя</td>
                            <td>Телефон</td>
                            <td>Email</td>
                            <td style="width:500px;">Дополнительная информация</td>
                            <td>Действие</td>
                           
                        </tr>
                        {{#each menureq}}
                        <tr>
                            <td><input style="text-align:center" value="{{NameClient}}" readonly></td>
                            <td><input style="text-align:center" value="{{Phone}}" readonly>	</td>
                            <td><input style="text-align:center" value="{{Email}}" readonly> </td>
                            <td><textarea style=" width:350px;" readonly >
                                {{Comment}} </textarea>
                            </td>
                            <td>
                            <form method="post" action="DelReq">
                            
                                   <button class="but-chan2" onclick="alert('Данные были удалены')">
                                            <input name="Req" hidden type="number" value="{{IDRequest}}"> 
                                        <div style="margin: 5px"><img class="img-change" src="images\del.png"><span>Удалить</span>
                                        </div>
                                    </button>
                                    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                           
                       
                         </form>
                      </td>

                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

        </div>
