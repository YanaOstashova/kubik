            <div class="main">
                <div class="main-head">
                    <h3>Группы</h3>
                </div>

                <br>
                <table align="center">
                    <tbody>
                        <tr class="name">
                          
                            <td>Название группы</td>
                            <td>Курс</td>
                            <td>Дата начала обучения</td>


                            <td class="change">Действие</td>
                        </tr>
                        <tr>
                            <form action="AddGroup" method="post">
                         

                            <td><input name="NameGroup" style="width: 85%;" type="text"></td>
                           <td> <select name="Course">
                                    {{#each menucor}}
                                    <option value="{{IDCourse}}">{{NameCourse}}</option>
                                    {{/each}}
                                </select>
                            </td>
                            <td> <select name="Study">
                                    {{#each menust}}
                                    <option value="{{IDStudy}}">{{DateStudy}}</option>
                                    {{/each}}
                                </select>
                            </td>
                            <td><button class="but-chan1" onclick="alert('Данные были добавлены')">
                                    <div style="margin: 5px;"><img class="img-change"src="images\ok.png"><span>Сохранить</span>
                                    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                                    </div>
                                </button>
                                </form>
                                <div style="margin: 4%;"></div>
                            </td>

                        </tr>
                        {{#each menuper}}
                        <tr>
                            <form action="DelGroup" method="post">
                            
                            <td><input type="text" value="{{NameGroup}}"></td>
                            <td><input type="text" value="{{NameCourse}}"></td>
                            <td><input type="text" value="{{DateStudy}}"></td>
                            <td>
                              
                                <div style="margin: 4%;"></div>
                                <button class="but-chan2" onclick="alert('Данные были удалены')">
                                     <input name="Group" hidden type="number" value="{{IDGroup}}">
                                    <div style="margin: 5px"><img class="img-change"  src="images\del.png"><span>Удалить</span>
                                    </div>
                                    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                                </button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

    </div>

