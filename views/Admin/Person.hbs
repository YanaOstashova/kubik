        <div class="find-photo">
          <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Поиск..">
          <button id="btn">Search</button>
        </div>
      -->

        <table align="center" id="tbl">
          <tbody>
            <tr class="name">


              <td>ФИО</td>
              <td>Дата рождения</td>
              <td>Телефон</td>
              <td>Email</td>
              <td>Юзер</td>

              <td style="width: 200px;">Действие</td>
            </tr>
            <tr>
              <form action="AddPers" method="post">

                <td><input name="NameP" type="text" required></td>
                <td><input name="BDay" type="date" required></td>
                <td><input name="PhoneP"  required id="phone" type="text" placeholder="+7 (999)99-99-999"> </td>
                <td><input name="EmailP" type="email" placeholder="user@server.com" ></td>
                <td> <select name="Us">
                    <option disabled>Выберите users</option>
                    {{#each menuus}}
                    <option value="{{IDUser}}">{{Login}}</option>
                    {{/each}}
                  </select>
                </td>

                <td><button type="submit" class="but-chan1" onclick="alert('Данные были добавлены')">
                    <div style="margin: 5px;"><img class="img-change" src="images\ok.png"><span>Сохранить</span></div>

                  </button>
                  <input type="hidden" name="_csrf" value="{{ csrfToken }}">
              </form>
              <div style="margin: 4%;"></div>

              </td>

            </tr>

            {{#each menupers}}
            <tr>
              <form action="UpPers" method="post">

                <td>
                  <input name="Pr" hidden type="number" value="{{IDPerson}}">
                  <input name="NameP" type="text" value="{{NamePerson}}">
                </td>
                <td>
                  <input name="BDay" type="text" value="{{Birthday}}">
                </td>
                <td>
                  <input name="PhoneP" type="text" value="{{Phone}}">
                </td>
                <td>
                  <input name="EmailP" type="text" value="{{Email}}">
                </td>
                <td>
                  <select name="Us">
                    <option value="{{ID_User}}">{{Login}}</option>

                  </select>
                </td>


                <td><button class="but-chan1"  onclick="alert('Данные были изменены')">
                    <div style="margin: 5px;"><img class="img-change" src="images\ok.png"><span>Сохранить</span></div>
          <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                  </button>
              </form>

              <div style="margin: 4%;"></div>
              <form action="DelPers" method="post">
                <button class="but-chan2" onclick="alert('Данные были удалены')">
                  <input name="Pr" hidden type="number" value="{{IDPerson}}">
                  <div style="margin: 5px"><img class="img-change" src="images\del.png"><span>Удалить</span></div>
              </form>
              </button>
              </td>

            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
