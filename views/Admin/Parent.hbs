                <table align="center">
                    <tbody>
                        <tr class="name">
                            <td style="width: 350px;">Персона</td>
                            <td style="width: 350px;">Адрес</td>
                            <td>Комментарий</td>
                           


                            <td style="width: 200px;">Действие</td>
                        </tr>
                        <tr>
                            <form action="AddParent" method="post" >                   
                            <td > 
                                <select name="Pr" style="width: 300px;" required>
                                    <option disabled>Выберите персону</option>
                                    {{#each menunam}}
                                    <option value="{{IDPerson}}">{{NamePerson}}</option>
                                    {{/each}}
                                </select>
                             </td>
                                 <td> 
                                <input name="Address" style="width: 300px;" type="text" required>
                             </td>
                            <td> 
                                <input name = "Comment" type="text">
                             </td>
                            
                            <td><button class="but-chan1" onclick="alert('Данные были добавлены')">
